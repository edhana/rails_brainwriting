<h1>Latest Boards of Ideas</h1>

<% @ideas.each do |i| %>
  <div class="well">
    <%= link_to idea_path(i) do %>
      <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>&nbsp;
      <strong><%= "#{i.description}"%></strong> - Last Updated: <%= i.updated_at.strftime(" %m/%d/%Y at %I:%M %p") %>
    <% end %>
    &nbsp;|&nbsp;
    <%= link_to new_idea_path(:parent_id => i) do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      <% end %>
    <%= link_to new_idea_path do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
  </div>
<% end %>
